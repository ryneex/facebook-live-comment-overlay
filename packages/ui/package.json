  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "radix-ui": "^1.4.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@repo/ts-config": "workspace:*",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0"
  }
}
