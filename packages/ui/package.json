{
  "name": "@repo/ui",
  "type": "module",
  "private": true,
  "exports": {
    "./components/*": "./src/components/*.tsx",
    "./lib/*": "./src/lib/*.ts",
    "./hooks/*": "./src/hooks/*.ts",
    "./styles/*": "./src/styles/*.css"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
